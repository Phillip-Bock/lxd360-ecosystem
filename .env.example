# ==============================================================================
# LXP360 SaaS Environment Variables (GCP Edition)
# ==============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ==============================================================================
#
# DEPLOYMENT ENVIRONMENTS:
# - Development: Local development (http://localhost:3000)
# - Staging: Cloud Run staging (staging.lxd360.com)
# - Production: Cloud Run production (lxd360.com)
#
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=2.6.0
# Set to: development | staging | production
NEXT_PUBLIC_APP_ENV=development

# ------------------------------------------------------------------------------
# Firebase (Required)
# https://console.firebase.google.com → Project Settings → General → Your apps
# ------------------------------------------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSy...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin (Server-side)
# https://console.firebase.google.com → Project Settings → Service accounts
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ------------------------------------------------------------------------------
# GCP Project
# https://console.cloud.google.com
# ------------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-project-id

# ------------------------------------------------------------------------------
# OAuth Providers (Configure in Firebase Console)
# https://console.firebase.google.com → Authentication → Sign-in method
# ------------------------------------------------------------------------------

# Google OAuth (configured in Firebase, credentials for reference)
# GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Microsoft Azure AD OAuth
# https://portal.azure.com → Azure Active Directory → App registrations
# AZURE_OAUTH_CLIENT_ID=your-azure-client-id
# AZURE_OAUTH_CLIENT_SECRET=your-azure-client-secret
# AZURE_OAUTH_TENANT_ID=common

# ------------------------------------------------------------------------------
# Stripe (Required for payments)
# https://dashboard.stripe.com/apikeys
#
# IMPORTANT: Use test keys for development:
# - Development: Use test keys (pk_test_* and sk_test_*)
# - Production: Use live keys (pk_live_* and sk_live_*)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxx

# Stripe Price IDs (create in Stripe Dashboard → Products)
STRIPE_PRICE_INDIVIDUAL_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_INDIVIDUAL_YEARLY=price_xxxxxxxx
STRIPE_PRICE_TEAM_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_TEAM_YEARLY=price_xxxxxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxxxxx

# ------------------------------------------------------------------------------
# PayPal (Alternative payment method)
# https://developer.paypal.com → My Apps & Credentials
# ------------------------------------------------------------------------------
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENV=sandbox
PAYPAL_WEBHOOK_ID=your-webhook-id

# ------------------------------------------------------------------------------
# QuickBooks (Accounting integration)
# https://developer.intuit.com → My Apps
# ------------------------------------------------------------------------------
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_ENV=sandbox
QUICKBOOKS_REALM_ID=your-company-id
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/api/integrations/quickbooks/callback

# ------------------------------------------------------------------------------
# GCP Vertex AI (Generative AI)
# https://console.cloud.google.com → Vertex AI
# ------------------------------------------------------------------------------
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Option 1: Base64-encoded service account JSON (for Cloud Run)
GCP_SERVICE_ACCOUNT_KEY=base64-encoded-service-account-json

# Option 2: Path to JSON file (for local development)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Vertex AI Model Configuration
GCP_VERTEX_TEXT_MODEL=gemini-1.5-pro
GCP_VERTEX_EMBEDDING_MODEL=textembedding-gecko@003

# Gemini API (direct access)
GEMINI_API_KEY=your-gemini-api-key

# ------------------------------------------------------------------------------
# Cloud Storage Buckets
# https://console.cloud.google.com → Cloud Storage
# ------------------------------------------------------------------------------
STORAGE_BUCKET_AVATARS=lxd360-avatars
STORAGE_BUCKET_COURSE_ASSETS=lxd360-course-assets
STORAGE_BUCKET_USER_UPLOADS=lxd360-user-uploads
STORAGE_BUCKET_GENERATED_VIDEOS=lxd360-generated-videos

# ------------------------------------------------------------------------------
# Synthesia (AI Video Generation)
# https://www.synthesia.io → Account → API
# ------------------------------------------------------------------------------
SYNTHESIA_API_KEY=your-synthesia-api-key
SYNTHESIA_DEFAULT_AVATAR=your-default-avatar-id
SYNTHESIA_WEBHOOK_URL=https://yourdomain.com/api/webhooks/synthesia

# ------------------------------------------------------------------------------
# xAPI / LRS (Learning Record Store)
# Your LRS provider (SCORM Cloud, Learning Locker, Watershed, etc.)
# ------------------------------------------------------------------------------
XAPI_LRS_ENDPOINT=https://your-lrs.com/xapi
XAPI_LRS_USERNAME=your-lrs-username
XAPI_LRS_PASSWORD=your-lrs-password
# Or if using API key auth:
# XAPI_LRS_API_KEY=your-lrs-api-key

# ------------------------------------------------------------------------------
# Cloud Tasks / Scheduled Jobs
# Generate a random string: openssl rand -base64 32
# ------------------------------------------------------------------------------
CRON_SECRET=your-random-secret-string

# ------------------------------------------------------------------------------
# BigQuery (Analytics)
# https://console.cloud.google.com → BigQuery
# ------------------------------------------------------------------------------
BIGQUERY_DATASET=learning_analytics

# ------------------------------------------------------------------------------
# Secret Manager
# https://console.cloud.google.com → Secret Manager
# ------------------------------------------------------------------------------
# Secrets are accessed via IAM, no keys needed if running on Cloud Run

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# ------------------------------------------------------------------------------
# Brevo Email Service (Marketing & Transactional)
# https://app.brevo.com → Settings → SMTP & API → API Keys
# ------------------------------------------------------------------------------
BREVO_API_KEY=xkeysib-your-api-key-here
BREVO_SENDER_EMAIL=noreply@lxd360.io
BREVO_SENDER_NAME=LXD360

# Brevo Template IDs (create in Brevo Dashboard → Transactional → Email Templates)
BREVO_TEMPLATE_WELCOME=1
BREVO_TEMPLATE_VERIFICATION=2
BREVO_TEMPLATE_PASSWORD_RESET=3
BREVO_TEMPLATE_COURSE_ENROLLMENT=4
BREVO_TEMPLATE_COURSE_COMPLETION=5
BREVO_TEMPLATE_NEW_LESSON=6
BREVO_TEMPLATE_PAYMENT_RECEIPT=7
BREVO_TEMPLATE_SUBSCRIPTION_RENEWAL=8
BREVO_TEMPLATE_ORG_INVITATION=9
BREVO_TEMPLATE_ASSIGNMENT_NOTIFICATION=10

# Brevo Contact List IDs (create in Brevo Dashboard → Contacts → Lists)
BREVO_LIST_NEWSLETTER=1
BREVO_LIST_WAITLIST=2
BREVO_LIST_ACTIVE_USERS=3
BREVO_LIST_CUSTOMERS=4
BREVO_LIST_ENTERPRISE_LEADS=5

# ------------------------------------------------------------------------------
# Development Only (DO NOT use in production)
# ------------------------------------------------------------------------------
# DEBUG=true
# SKIP_EMAIL_VERIFICATION=true
