{
  "name": "lxd360-ecosystem",
  "version": "3.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:web": "turbo run build --filter=@lxd360/web",
    "dev": "turbo run dev --filter=@lxd360/web",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "type-check": "turbo run typecheck",
    "check": "turbo run lint typecheck",
    "quality": "pnpm run lint && pnpm run typecheck",
    "clean": "rm -rf node_modules .turbo apps/*/node_modules apps/*/.next packages/*/node_modules packages/*/dist",
    "test": "vitest",
    "test:integration": "vitest run tests/integration/",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:components": "vitest run tests/components/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "vitest run && playwright test",
    "test:a11y": "playwright test tests/accessibility/",
    "prepare": "husky",
    "process:cortex": "powershell -ExecutionPolicy Bypass -File scripts/process-models.ps1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/d3-color": "^3.1.3",
    "@types/d3-path": "^3.1.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "dotenv": "^17.2.3",
    "eventsource": "^4.1.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^15.5.2",
    "msw": "^2.12.7",
    "pa11y": "^6.2.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
